<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#f00"
        android:singleLine="true"
        android:textSize="40sp"
        android:focusable="false"
        android:text=""
        />
        <TableRow android:layout_weight="1"
                  android:orientation="horizontal" >
            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="1"
                android:textColor="#f00"
                android:textSize="40sp" />
            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="2"
                android:textColor="#f00"
                android:textSize="40sp" />
            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="3"
                android:textColor="#f00"
                android:textSize="40sp"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="4"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="5"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="6"
                android:textColor="#f00"
                android:textSize="40sp"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="7"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="8"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="9"
                android:textColor="#f00"
                android:textSize="40sp"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="0"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="."
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="+"
                android:textColor="#f00"
                android:textSize="40sp" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="-"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/mul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="*"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="/"
                android:textColor="#f00"
                android:textSize="40sp"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="="
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="B"
                android:textColor="#f00"
                android:textSize="40sp"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="go"
                android:text="C"
                android:textColor="#f00"
                android:textSize="40sp"/>
        </TableRow>
</TableLayout>
